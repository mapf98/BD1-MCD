<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>MinerUCAB - Explotaciones</title>

    <link rel="icon" href="public/images/favicon.png">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="public/css/animate.css">
    <link href="public/css/bootstrap.min.css" rel="stylesheet">
    <link href="public/css/estilos.css" rel="stylesheet">
  </head>
 
<body>
    <div class="container-fluid">
      <div class="row">
        <nav class="col-lg-2 d-none d-md-block sidebar">
          <div class="sidebar-sticky">
            <section class="container-fluid">

             <!--Cabecera del sidebar-->
              <section class="sideInfo">
                <div class="row">
                  <div class="col-lg-12">
                    <img src="public/images/logo.png" class="img-fluid">
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-12 tagUser">
                    <h3 class="text-center text-sidebar textUser"><%= user.nombre %> <%= user.apellido %></h3>
                    <p class="text-center text-sidebar"><%= user.cargo %></p>
                    <p class="text-center text-sidebar"><%= user.usuario %></p>
                  </div>
                </div>
              </section>

              <!--Contenido del sidebar-->
              <section class="sectionOptions">
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center iconsSideMenuGH animated fadeIn" id="menuItemHome">
                      <p class="text-center iconSideMenu"><i class="fas fa-home"></i></p>
                      <p class="text-center">Home</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                </div>
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center iconsSideMenuGH animated fadeIn activeOption" id="menuItemExplotaciones">
                      <p class="text-center iconSideMenu"><i class="fas fa-bomb"></i></p>
                      <p class="text-center">Explotaciones</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                </div>
              </section>


              <!--Footer del sidebar-->
              <div class="footerSideBar">

                <hr>
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form>
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-bell"></i>  Notificaciones</button>
                      </form>
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>  

                <div class="row rowButtonSidebar">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form >
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-cog"></i>  Configuración</button>
                      </form>
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>  

                <div class="row rowButtonSidebar">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form action="/logOut" method="POST">
                        <button class="btn btn-sm btnHome" type="submit"> <i class="far fa-arrow-alt-circle-left"></i>  Cerrar Sesión</button>
                      </form>  
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>
              </div>
              
            </section>
          </div>
        </nav>

        
        <main role="main" class="ml-sm-auto col-lg-10 content">
          <section class="container-fluid proBox">
            <div class="row">
              <div class="col-lg-2"></div>
              <div class="col-lg-8"><h1 class="text-center title">Configuraciones actuales</h1></div>
              <div class="col-lg-2"></div>
            </div>
            <div class="row">
              <div class="col-12">
                <div class="boxConsultarEmpleado animated slideInUp">
                  <table id="table_id_configuraciones" class="display">
                    <thead class="headDataTable">
                        <tr>
                          <th class="text-center">Yacimiento</th>
                          <th class="text-center">Duración</th>
                          <th class="text-center">Total Etapas</th>
                          <th class="text-center">Costo total estimado</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% for(var i=0; i < yacimientosExp.length; i++) {%>
                        <tr>
                          <td class="text-center"><%=yacimientosExp[i].yac_nombre%></td>
                          <td class="text-center"><%=yacimientosExp[i].exp_duracion%> Días</td>
                          <td class="text-center"><%=yacimientosExp[i].totaletapas%></td>
                          <td class="text-center"><%=yacimientosExp[i].exp_costototal%> Bs</td>
                        </tr>
                      <%}%>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <hr class="hretapa animated slideInUp">
            <div class="row rowDetalle">
              <div class="col-12">
                <div class="boxConsultarEmpleado animated slideInUp">
                  <div class="container-fluid">

                    <div class="row rowM">
                      <div class="col-lg-3"></div>
                      <div class="col-lg-6"><h2 class="text-center">Consulta detallada <i class="fas fa-book"></i></h2></div>
                      <div class="col-lg-3"></div>
                    </div>

                    <div class="row">
                      <div class="col-lg-8">
                        <label for="yacimientoSelect">Yacimientos</label>
                        <select class="form-control formsCRUD" id="yacimientoSelect" required>
                          <% for(var i=0; i < yacimientosExp.length; i++) {%>
                            <option value='<%=yacimientosExp[i].yac_codigo%>'><%=yacimientosExp[i].yac_nombre%></option>
                          <%}%>
                        </select>
                      </div>
                      <div class="col-lg-4">
                        <label for="yacimientoEtapa">Etapas</label>
                        <select class="form-control formsCRUD" id="yacimientoEtapa" required>
                         
                        </select>
                      </div>
                    </div>

                  </div>
                  <hr>
                  <table id="table_id_detalleConfiguracion" class="display">
                    <thead class="headDataTable">
                        <tr>
                          <th class="text-center">Fase</th>
                          <th class="text-center">Cargos</th>
                          <th class="text-center">Maquinaria</th>
                          <th class="text-center">Total empleados</th>
                          <th class="text-center">Total maquinaria</th>
                          <th class="text-center">Costo estimado</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyDetalle">
                      
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </section>
        </main>
      </div>
    </div>

    <script
    src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
    crossorigin="anonymous"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script src="public/js/logic.js"></script>
    <script src="public/js/popper.min.js"></script>
    <script src="public/js/bootstrap.min.js"></script>
  </body>

</html>