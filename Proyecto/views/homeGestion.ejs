<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>MinerUCAB - Gestión</title>

    <link rel="icon" href="public/images/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="public/css/animate.css">
    <link href="public/css/bootstrap.min.css" rel="stylesheet">
    <link href="public/css/estilos.css" rel="stylesheet">
  </head>
 
<body>
    <div class="container-fluid">
      <div class="row">
        <nav class="col-lg-2 d-none d-md-block sidebar">
          <div class="sidebar-sticky">
            <section class="container-fluid">

             <!--Cabecera del sidebar-->
              <section class="sideInfo">
                <div class="row">
                  <div class="col-lg-12">
                    <img src="public/images/logo.png" class="img-fluid">
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-12">
                    <h3 class="text-center textUser"><%= user.nombre %> <%= user.apellido %></h3>
                    <p class="text-center">Administrador</p>
                    <p class="text-center"><%= user.usuario %></p>
                  </div>
                </div>
              </section>

              <!--Contenido del sidebar-->
              <section class="sectionOptions">
                <div class="row">
                  <div class="col-lg-5">
                    <div class="text-center iconsSideMenuGH animated fadeIn" id="menuItemCaja">
                      <p class="text-center iconSideMenu"><i class="fas fa-cash-register"></i></p>
                      <p class="text-center">Caja</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                  <div class="col-lg-5">
                    <div class="text-center iconsSideMenuGH animated fadeIn" id="menuItemProyectos">
                      <p class="text-center iconSideMenu"><i class="fas fa-sliders-h"></i></p>
                      <p class="text-center">Proyectos</p>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-5">
                    <div class="text-center iconsSideMenuGH animated fadeIn" id="menuItemPersonal">
                      <p class="text-center iconSideMenu"><i class="fas fa-id-card-alt"></i></p>
                      <p class="text-center">Personal</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                  <div class="col-lg-5">
                    <div class="text-center iconsSideMenuGH animated fadeIn activeOption" id="menuItemGestion">
                      <p class="text-center iconSideMenu"><i class="fas fa-folder"></i></p>
                      <p class="text-center">Gestión</p>
                    </div>
                  </div>
                </div>
              </section>


              <!--Footer del sidebar-->
              <div class="footerSideBar">

                <hr>
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form>
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-bell"></i>  Notificaciones</button>
                      </form>
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>  

                <div class="row rowButtonSidebar">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form >
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-cog"></i>  Configuración</button>
                      </form>
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>  

                <div class="row rowButtonSidebar">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form action="/logOut" method="POST">
                        <button class="btn btn-sm btnHome" type="submit"> <i class="far fa-arrow-alt-circle-left"></i>  Cerrar Sesión</button>
                      </form>  
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>
              </div>
              
            </section>
          </div>
        </nav>

        
        <main role="main" class="ml-sm-auto col-lg-10 content">
          <section class="container-fluid proyectosBox">
            <div class="row">
              <div class="col-4" id="menuItemMinerales">
                <div class="boxMenuItem animated fadeIn">
                  <p class="text-center"><i class="fas fa-industry iconsMenu"></i></p>
                  <h2 class="text-center">Minerales</h2>
                </div>
              </div>
              <div class="col-4" id="menuItemPresentacion">
                <div class="boxMenuItem animated fadeIn">
                  <p class="text-center"><i class="fas fa-gift iconsMenu"></i></p>
                  <h2 class="text-center">Presentación</h2>
                </div>
              </div>
              <div class="col-4" id="menuItemInventario">
                <div class="boxMenuItem animated fadeIn">
                  <p class="text-center"><i class="fas fa-dolly-flatbed iconsMenu"></i></p>
                  <h2 class="text-center">Inventario</h2>
                </div>
              </div>
            </div>
            <div class="row rowDivider">
              <div class="col-4" id="menuItemReportes">
                <div class="boxMenuItem animated fadeIn">
                  <p class="text-center"><i class="fas fa-poll iconsMenu"></i></p>
                  <h2 class="text-center">Reportes</h2>
                </div>
              </div>
              <div class="col-4" id="menuItemLugar">
                <div class="boxMenuItem animated fadeIn">
                  <p class="text-center"><i class="fas fa-map-marker-alt iconsMenu"></i></p>
                  <h2 class="text-center">Lugar</h2>
                </div>
              </div>
              <div class="col-4" id="menuItemEstatus">
                <div class="boxMenuItem animated fadeIn">
                  <p class="text-center"><i class="fas fa-lock iconsMenu"></i></p>
                  <h2 class="text-center">Estatus</h2>
                </div>
              </div>
            </div>
            <div class="row rowButtonBack">
              <div class="col-4"></div>
              <div class="col-4">
                <button type="button" class="btn btn-block btnBack" id="backToHome"><i class="fas fa-arrow-left"></i> Volver al menú principal</button>
              </div>
              <div class="col-4"></div>
            </div>
          </section>
        </main>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="public/js/logic.js"></script>
    <script src="public/js/popper.min.js"></script>
    <script src="public/js/bootstrap.min.js"></script>
  </body>

</html>