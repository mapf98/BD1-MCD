<body>
    <div class="container-fluid">
      <div class="row">
        <nav class="col-lg-2 d-none d-md-block sidebar">
          <div class="sidebar-sticky">
            <section class="container-fluid">

              <!--Cabecera del sidebar-->
              <section class="cabecera">
                <div class="row">
                  <div class="col-lg-12">
                    <img src="public/images/favicon.png" class="img-fluid">
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-12">
                    <h3 class="text-center"><%= user.nombre %> <%= user.apellido %></h3>
                    <p class="text-center">Administrador - <%= user.usuario %></p>
                  </div>
                </div>
              </section>

              <!--Contenido del sidebar-->
              <section class="sectionOptions">
                <div class="row">
                  <div class="col-lg-6">
                    <ul class="list-group">
                      <li class="list-group-item text-sidebar"><i class="far fa-handshake"></i> Aliados</li>
                      <li class="list-group-item text-sidebar"><i class="fas fa-shopping-bag"></i> Sol. Compra</li>
                      <li class="list-group-item text-sidebar"><i class="fas fa-id-card-alt"></i> Empleados</li>
                      <li class="list-group-item text-sidebar"><i class="fas fa-wallet"></i> Ventas</li>
                    </ul>
                  </div>

                  <div class="col-lg-6">
                    <ul class="list-group">
                      <li class="list-group-item text-sidebar"><i class="fas fa-industry"></i> Minerales</li>
                      <li class="list-group-item text-sidebar"><i class="fas fa-list-ol"></i> Reportes</li>
                      <li class="list-group-item text-sidebar"><i class="fas fa-toolbox"></i> Yacimientos</li>
                      <li class="list-group-item text-sidebar"><i class="fas fa-bomb"></i> Explotaciones</li>
                    </ul>
                  </div>
                </div>
              </section>
             

              <hr>

              <!--Footer del sidebar-->
              <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8">
                  <ul class="list-group">
                    <li class="list-group-item text-footer"><i class="fas fa-bell"></i>  Notificaciones</li>
                    <li class="list-group-item text-footer"><i class="fas fa-cog"></i>  Configuración</li>
                    <li class="list-group-item text-footer"> 
                      <form action="/logOut" method="POST">
                        <i class="far fa-arrow-alt-circle-left"></i> <button type="submit">Cerrar Sesión</button>
                      </form> 
                    </li>
                  </ul>
                </div>
                <div class="col-lg-2"></div>
              </div>
            </section>
          </div>
        </nav>

        
        <main role="main" class="ml-sm-auto col-lg-10 content">
          <section class="container-fluid">
            <div class="row">
              <div class="col-12">
                  <h1 class="text-center">Contenido</h1>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                  <h1 class="text-center">Contenido</h1>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                  <h1 class="text-center">Contenido</h1>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                  <h1 class="text-center">Contenido</h1>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                  <h1 class="text-center">Contenido</h1>
              </div>
            </div>
            <img src="public/images/fondo.jpg" class="img-fluid">
          </section>
        </main>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="public/js/popper.min.js"></script>
