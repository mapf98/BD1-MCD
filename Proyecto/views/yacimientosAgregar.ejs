<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>MinerUCAB - Yacimientos</title>

    <link rel="icon" href="public/images/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="public/css/animate.css">
    <link href="public/css/bootstrap.min.css" rel="stylesheet">
    <link href="public/css/estilos.css" rel="stylesheet">
  </head>
 
<body>
    <div class="container-fluid">
      <div class="row">
        <nav class="col-lg-2 d-none d-md-block sidebar">
          <div class="sidebar-sticky">
            <section class="container-fluid">

             <!--Cabecera del sidebar-->
              <section class="sideInfo">
                <div class="row">
                  <div class="col-lg-12">
                    <img src="public/images/logo.png" class="img-fluid">
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-12 tagUser">
                    <h3 class="text-center text-sidebar textUser"><%= user.nombre %> <%= user.apellido %></h3>
                    <p class="text-center text-sidebar"><%= user.cargo %></p>
                    <p class="text-center text-sidebar"><%= user.usuario %></p>
                  </div>
                </div>
              </section>

              <!--Contenido del sidebar-->
              <section class="sectionOptions">
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center iconsSideMenuGH animated fadeIn" id="menuItemHome">
                      <p class="text-center iconSideMenu"><i class="fas fa-home"></i></p>
                      <p class="text-center">Home</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                </div>
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center iconsSideMenuGH animated fadeIn activeOption" id="menuItemYacimientos">
                      <p class="text-center iconSideMenu"><i class="fas fa-toolbox"></i></p>
                      <p class="text-center">Yacimientos</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                </div>
              </section>


              <!--Footer del sidebar-->
              <div class="footerSideBar">

                <hr>
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form>
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-bell"></i>  Notificaciones</button>
                      </form>
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>  

                <div class="row rowButtonSidebar">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form >
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-cog"></i>  Configuración</button>
                      </form>
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>  

                <div class="row rowButtonSidebar">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form action="/logOut" method="POST">
                        <button class="btn btn-sm btnHome" type="submit"> <i class="far fa-arrow-alt-circle-left"></i>  Cerrar Sesión</button>
                      </form>  
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>
              </div>
              
            </section>
          </div>
        </nav>

        
        <main role="main" class="ml-sm-auto col-lg-10 content">
          <section class="container-fluid empleadosAgregarBox">
            <div class="row titleRow">
              <div class="col-2"></div>
              <div class="col-8">
                <h1 class="text-center textTitle">Agregar Yacimiento</h1>
              </div>
              <div class="col-2"></div>
            </div>
            <div class="row">
              <div class="col-2"></div>
              <div class="col-8">
                <div class="boxFormAgregarYacimiento animated fadeIn">

                  <form action="/Yacimientos-Agregar" method="POST" id="agregarYacimiento">
                    <div class="form-row">
                      <div class="col-md-6 mb-3">
                        <label for="nombreYacimiento">Nombre yacimiento</label>
                        <input type="text" class="form-control formsCRUD" id="nombreYacimiento" required>
                      </div>
                      <div class="col-md-6 mb-3">
                        <label for="extensionYacimiento">Extensión (kmts2)</label>
                        <input type="number" min="0.01" step="0.01" class="form-control formsCRUD" id="extensionYacimiento" required>
                      </div>
                    </div>
                    <div class="form-row">
                      <div class="col-md-4 mb-3">
                        <label for="estadoSelect">Estado</label>
                        <select class="form-control formsCRUD" id="estadoSelect" required>
                          <% for(var i=0; i < dataLugar.length; i++) {%>
                            <% if (dataLugar[i].lug_tipo == 'ESTADO') { %>
                              <option value='<%=dataLugar[i].lug_codigo%>'><%=dataLugar[i].lug_nombre%></option>
                            <%}%>
                          <%}%>
                        </select>
                      </div>
                      <div class="col-md-4 mb-3">
                        <label for="municipioSelect">Municipio</label>
                        <select class="form-control formsCRUD" id="municipioSelect" required>
                          <option>Selecciona un estado</option>
                        </select>
                      </div>
                      <div class="col-md-4 mb-3">
                        <label for="parroquiaSelect">Parroquia</label>
                        <select class="form-control formsCRUD" id="parroquiaSelect" required>
                          <option>Selecciona un municipio</option>
                        </select>
                      </div>
                    </div>

                    <hr>

                    <div class="row">
                      <div class="col-4"></div>
                      <div class="col-4">
                        <button class="btn btn-success btn-block" id="addMin">Asignar mineral</button>
                      </div>
                      <div class="col-4"></div>
                    </div>

                    <div class="listMin" id="listMin">

                    </div>                      


                    <hr>

                    <button class="btn btnForms btn-block" type="submit">Agregar</button>
                  </form>
                </div>
              </div>
              <div class="col-2"></div>
            </div>
          </section>
        </main>
      </div>
    </div>

    <script
    src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
    crossorigin="anonymous"></script>
    <script src="public/js/logic.js"></script>
    <script src="public/js/popper.min.js"></script>
    <script src="public/js/bootstrap.min.js"></script>
  </body>

</html>