                      <p class="text-center iconSideMenu"><i class="fas fa-home"></i></p>
                      <p class="text-center">Home</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                </div>
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center iconsSideMenuGH animated fadeIn activeOption" id="menuItemMinerales">
                      <p class="text-center iconSideMenu"><i class="fas fa-address-card"></i></p>
                      <p class="text-center">Minerales</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                </div>
              </section>


              <!--Footer del sidebar-->
              <div class="footerSideBar">

                <hr>
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form>
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-bell"></i>  Notificaciones</button>
                      </form>
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>  

                <div class="row rowButtonSidebar">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form >
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-cog"></i>  Configuraci칩n</button>
