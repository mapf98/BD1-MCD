                      </form>  
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>
              </div>
              
            </section>
          </div>
        </nav>

        
        <main role="main" class="ml-sm-auto col-lg-10 content">
          <section class="container-fluid empleadosAgregarBox">
            <div class="row titleRow">
              <div class="col-2"></div>
              <div class="col-8">
                <h1 class="text-center textTitle">Modificar Minerales met치licos</h1>
              </div>
              <div class="col-2"></div>
            </div>
            <div class="row">
              <div class="col-2"></div>
              <div class="col-8">
                <div class="boxFormModificarEmpleado animated fadeIn">
                  <form action="/Metalicos-Verificar" method="POST" id="verificarMetalico">
                    <div class="form-row">
                      <div class="col-md-8 mb-3">
                        <label for="codigoMetalicoVerificar">C칩digo</label>
                        <input type="number" class="form-control formsCRUD" id="codigoMetalicoVerificar" required>
                      </div>
                      <div class="col-md-4 mb-3">
                        <label for="labelF" class="hackerText">Hackers</label>
                        <button class="btn btnForms btn-block" id="labelF" type="submit">Modificar</button>
                      </div>
                    </div>
                  </form>
                </div> 
              </div>
              <div class="col-2"></div>
            </div>
            <div class="row">
              <div class="col-2"></div>
              <div class="col-8">
                <div class="boxModificarEmpleado animated fadeIn">
                  <form action="/Metalicos-Modificar" method="POST" id="guardarCambioMetalico">
                    <div class="boxPrevMod animated fadeIn">
                      <h4 class="text-center">Selecciona un mineral para modificar su ficha</h4>
                      <p class="text-center"><i class="fas fa-address-card iconMod"></i></p>
                    </div>
                  </form>
                </div>
              </div>
              <div class="col-2"></div>
            </div>
          </section>
        </main>
      </div>
    </div>

    <script
