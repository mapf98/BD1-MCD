<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>MinerUCAB - Mineral</title>

    <link rel="icon" href="public/images/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="public/css/animate.css">
    <link href="public/css/bootstrap.min.css" rel="stylesheet">
    <link href="public/css/estilos.css" rel="stylesheet">
  </head>
 
<body>
    <div class="container-fluid">
      <div class="row">
        <nav class="col-lg-2 d-none d-md-block sidebar">
          <div class="sidebar-sticky">
            <section class="container-fluid">

             <!--Cabecera del sidebar-->
              <section class="sideInfo">
                <div class="row">
                  <div class="col-lg-12">
                    <img src="public/images/logo.png" class="img-fluid">
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-12 tagUser">
                    <h3 class="text-center text-sidebar textUser"><%= user.nombre %> <%= user.apellido %></h3>
                    <p class="text-center text-sidebar">Administrador</p>
                    <p class="text-center text-sidebar"><%= user.usuario %></p>
                  </div>
                </div>
              </section>

              <!--Contenido del sidebar-->
              <section class="sectionOptions">
                <div class="row">
                  <div class="col-lg-5">
                    <div class="text-center iconsSideMenuGH animated fadeIn activeOption" id="menuItemCaja">
                      <p class="text-center iconSideMenu"><i class="fas fa-cash-register"></i></p>
                      <p class="text-center">Caja</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                  <div class="col-lg-5">
                    <div class="text-center iconsSideMenuGH animated fadeIn" id="menuItemProyectos">
                      <p class="text-center iconSideMenu"><i class="fas fa-sliders-h"></i></p>
                      <p class="text-center">Proyectos</p>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-lg-5">
                    <div class="text-center iconsSideMenuGH animated fadeIn" id="menuItemPersonal">
                      <p class="text-center iconSideMenu"><i class="fas fa-id-card-alt"></i></p>
                      <p class="text-center">Personal</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                  <div class="col-lg-5">
                    <div class="text-center iconsSideMenuGH animated fadeIn" id="menuItemGestion">
                      <p class="text-center iconSideMenu"><i class="fas fa-folder"></i></p>
                      <p class="text-center">Gestión</p>
                    </div>
                  </div>
                </div>
              </section>


              <!--Footer del sidebar-->
              <div class="footerSideBar">

                <hr>
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form>
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-bell"></i>  Notificaciones</button>
                      </form>
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>  

                <div class="row rowButtonSidebar">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form >
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-cog"></i>  Configuración</button>
                      </form>
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>  

                <div class="row rowButtonSidebar">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form action="/logOut" method="POST">
                        <button class="btn btn-sm btnHome" type="submit"> <i class="far fa-arrow-alt-circle-left"></i>  Cerrar Sesión</button>
                      </form>  
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>
              </div>
              
            </section>
          </div>
        </nav>

        
        <main role="main" class="ml-sm-auto col-lg-10">
            <h1 class="titulo">NUEVO MINERAL</h2>
            <div class="container p-4">
              <div class="row">
                <div class="col-md-8 mx-auto">
                  <div class="card">
                    <div class="card-body">
                      <form action=""method="POST">
                        <div class="form-group">
                          <!--NOMBRE-->
                       <!--  <input type="text" class="form-control is-valid" name="Min_Nombre" placeholder="Nombre del Mineral" required autofocus>-->
                          <input type="text" class="form-control" name="Min_Nombre" placeholder="Nombre del Mineral" required autofocus>
                        </div>

                        <!--TIPO-->
                          <select class="custom-select">
                              <option selected>Tipo de Mineral</option>
                              <option value="1">Metalico</option>
                              <option value="2">No metalico</option>
                          </select>
                    
                          <!--CANT.ACTUAL-->
                          <label for="validationServer01" class="m-2">Posee cantidad actual?</label>
                          <div class="form-check form-check-inline">
                              <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                              <label class="form-check-label" for="inlineCheckbox1">Si</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                            <label class="form-check-label" for="inlineCheckbox2">No</label>
                          </div>


                         <div class="form-group">
                          <input type="text" class="form-control" name="Min_Cantidad" placeholder="Cantidad" autofocus>
                        </div>
                         <div class="form-group">
                          <textarea name="Min_Descripcion" class="form-control" placeholder="Descripcion" cols="50" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                          <input type="text" class="form-control" name="Min_Yacimientos" placeholder="Yacimientos vinculados" autofocus>
                        </div>
                        <div class="form-group">
                          <input type="text" class="form-control" name="Min_Minerales" placeholder="Minerales Necesarios para su explotacion" autofocus>
                        </div>
                        <div class="form-group">
                          <button class= "btn btn-block btnSave"> Guardar</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row rowButtonBack">
              <div class="col-4"></div>
              <div class="col-4">
                <button type="button" class="btn btn-block btnBack" id="backToMineral"><i class="fas fa-arrow-left"></i> Volver a Minerales</button>
              </div>
              <div class="col-4"></div>
            </div>
          </section>
        </main>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="public/js/logic.js"></script>
    <script src="public/js/popper.min.js"></script>
    <script src="public/js/bootstrap.min.js"></script>
  </body>

</html>