<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>MinerUCAB - Ventas</title>
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <link rel="icon" href="public/images/favicon.png">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="public/css/animate.css">
    <link href="public/css/bootstrap.min.css" rel="stylesheet">
    <link href="public/css/estilos.css" rel="stylesheet">
  </head>
 
<body> 
    <div class="container-fluid">
      <div class="row">
        <nav class="col-lg-2 d-none d-md-block sidebar">
          <div class="sidebar-sticky">
            <section class="container-fluid">

             <!--Cabecera del sidebar-->
              <section class="sideInfo">
                <div class="row">
                  <div class="col-lg-12">
                    <img src="public/images/logo.png" class="img-fluid">
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-12 tagUser">
                    <h3 class="text-center text-sidebar textUser"><%= user.nombre %> <%= user.apellido %></h3>
                    <p class="text-center text-sidebar"><%= user.cargo %></p>
                    <p class="text-center text-sidebar"><%= user.usuario %></p>
                  </div>
                </div>
              </section>

              <!--Contenido del sidebar-->
              <section class="sectionOptions">
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center iconsSideMenuGH animated fadeIn" id="menuItemHome">
                      <p class="text-center iconSideMenu"><i class="fas fa-home"></i></p>
                      <p class="text-center">Home</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                </div>
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center iconsSideMenuGH animated fadeIn activeOption" id="menuItemVentas">
                      <p class="text-center iconSideMenu"><i class="fas fa-dollar-sign"></i></p>
                      <p class="text-center">Ventas</p>
                    </div>
                  </div>
                  <div class="col-lg-2"></div>
                </div>
              </section>


              <!--Footer del sidebar-->
              <div class="footerSideBar">

                <hr>
                <div class="row">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form>
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-bell"></i>  Notificaciones</button>
                      </form>
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>  

                <div class="row rowButtonSidebar">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form >
                        <button class="btn btn-sm btnHome" type="submit"> <i class="fas fa-cog"></i>  Configuración</button>
                      </form>
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>  

                <div class="row rowButtonSidebar">
                  <div class="col-lg-2"></div>
                  <div class="col-lg-8">
                    <div class="text-center">
                      <form action="/logOut" method="POST">
                        <button class="btn btn-sm btnHome" type="submit"> <i class="far fa-arrow-alt-circle-left"></i>  Cerrar Sesión</button>
                      </form>  
                    </div>
                  </div> 
                  <div class="col-lg-2"></div>
                </div>
              </div>
              
            </section>
          </div>
        </nav>

        
           <main role="main" class="ml-sm-auto col-lg-10 content">
          <section class="container-fluid empleadosAgregarBox">
            <div class="row titleRow">
              <div class="col-2"></div>
              <div class="col-8">
                <h1 class="text-center textTitle">VENTAS</h1>
              </div>
              <div class="col-2"></div>
            </div>
            <div class="row">
              <div class="col-12">
                <div class="boxConsultarEmpleado animated fadeIn">
                  <table id="consultaDetalleVen" class="display">
                    <thead class="headDataTable">
                        <tr>
                          <th></th>
                          <th class="text-center">Código </th>
                          <th class="text-center">Cantidad</th>
                          <th class="text-center">Mineral</th>   
                          <th class="text-center">Presentacion</th> 
                          <th class="text-center">Monto</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% for(var i=0; i < DetalleMet.length; i++) {%>
                          <tr>
                          <td></td>
                          <td class="text-center"><%=DetalleMet[i].ven_codigo%></td>
                          <td class="text-center"><%=DetalleMet[i].dev_cantidad%></td>
                          <td class="text-center"><%=DetalleMet[i].met_nombre%></td>
                          <td class="text-center"><%=DetalleMet[i].pre_nombre%></td>
                          <td class="text-center"><%=DetalleMet[i].dev_monto%></td>
                        </tr>
                      <%}%>
                      <% for(var i=0; i < DetalleNoMet.length; i++) {%>
                          <tr>
                          <td></td>
                          <td class="text-center"><%=DetalleNoMet[i].ven_codigo%></td>
                          <td class="text-center"><%=DetalleNoMet[i].dev_cantidad%></td>
                          <td class="text-center"><%=DetalleNoMet[i].nom_nombre%></td>
                          <td class="text-center"><%=DetalleNoMet[i].pre_nombre%></td>
                          <td class="text-center"><%=DetalleNoMet[i].dev_monto%></td>
                        </tr>
                      <%}%> 
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </section>
        </main>
      </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.10.16/r-2.2.1/datatables.min.js"></script>
    <script src="public/js/logic.js"></script>
    <script src="public/js/popper.min.js"></script>
    <script src="public/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  </body>

</html>